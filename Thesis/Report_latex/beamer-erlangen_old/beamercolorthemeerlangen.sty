\definecolor{erlangenblack}{RGB}{0,0,0}
\definecolor{erlangenwhite}{RGB}{255,255,255}
\definecolor{erlangenlightgrey}{RGB}{200,200,200}
\definecolor{erlangenlightergrey}{RGB}{230,230,230}
\definecolor{erlangendarkgrey}{RGB}{72,72,72}
\definecolor{erlangenblue}{RGB}{7,61,111}
\definecolor{erlangenlyellow}{RGB}{202,108,24}


%\setbeamerfont{<bleh>}{family=, size=, shape=, series=}

\setbeamercolor{frametitle}{bg=erlangenlightergrey,fg=erlangenblue}

\setbeamercolor{titlepage}{bg=erlangenlightgrey}
\setbeamercolor{titlepage main}{bg=erlangenwhite,fg=erlangendarkgrey}

\setbeamercolor{headerline title}{fg=erlangenwhite,bg=erlangenblack}
\setbeamercolor{headerline border}{bg=erlangenblue}

\setbeamercolor{footerline topborder}{bg=erlangenblue}
\setbeamercolor{footerline}{bg=erlangendarkgrey,fg=erlangenwhite}

\setbeamercolor{section in head/foot}{fg=erlangenwhite}
\setbeamertemplate{section in head/foot shaded}[default][50]
\setbeamerfont{section in head/foot}{size=\tiny, shape=\bfseries}

\setbeamercolor{alerted text}{fg=erlangenlyellow}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{structure}{bg=erlangenwhite, fg=erlangenlyellow}

% blocks
\setbeamercolor{block title}          {bg=erlangenlightergrey,fg=erlangendarkgrey}
\setbeamercolor{block body}           {fg=erlangenblack}
\setbeamercolor{block title example}  {bg=erlangenlightgrey,fg=erlangenblue}
\setbeamercolor{block body example}   {bg=erlangenlightergrey,fg=erlangendarkgrey}
\setbeamercolor{block title alerted}  {bg=erlangenlyellow, fg=erlangenblack}
\setbeamercolor{block body alerted}   {bg=erlangenlightergrey,fg=erlangendarkgrey}
